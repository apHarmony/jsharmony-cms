{
  "Deployment_Scheduled_Listing": {
    "layout":"grid",
    "table":"{schema}.deployment",
    "caption":["Deployment","Deployments"],
    "title":"Scheduled Deployments",
    "menu":"jsHarmonyCMS/Deployment_Scheduled_Listing",
    "noresultsmessage":"No scheduled deployments.",
    "tablestyle":"min-width:450px;",
    "actions":"BU",
    "roles": {"PUBLISHER": "BU"},
    "sqlwhere":"deployment_sts in ('HOLD','PENDING','RUNNING')",
    "buttons":[{ "link":"Deployment_Add","icon":"add","text":"Add Deployment" }],
    "fields": [
      {"name":"deployment_tag","caption":"Tag","control":"label"},
      {"name":"deployment_date","caption":"Date","validate":["IsDate"],"format":"date:'YYYY-MM-DD hh:mm A'","controlstyle":"width:145px;"},
      {"name":"deployment_sts","caption":"Status"},
      {"name":"branch_id","control":"hidden"},
      {"name":"branch_desc","caption":"Branch","cellstyle":"min-width:200px;","sqlselect":"(select branch_desc from {schema}.v_my_branch_desc where branch_id={schema}.deployment.branch_id)"},
      {"name":"deployment_etstmp","caption":"Scheduled","control":"label","actions":"B","format":["date","MM/DD/YYYY h:mm a"]},
      {"name":"deployment_euser_fmt","caption":"Scheduled By","sqlselect":"(jsharmony.my_db_user_fmt(deployment_euser))","control":"label","actions":"B"},
      {"caption":"Checkout","control":"linkbutton","link":"update:Branch_Checkout&branch_id","captionstyle":"text-align:center;","cellstyle":"text-align:center;",
        "controlstyle":"<%=xejs.iif(datarow['branch_is_checked_out']==1,'display:none;')%>"},
      {"caption":"Clone","control":"linkbutton","link":"update:Branch_Clone&branch_id","captionstyle":"text-align:center;","cellstyle":"text-align:center;"}
    ]
  }
}