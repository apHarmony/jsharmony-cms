<script type="text/x-jsharmony-template" class="<%=model.class%>_file_listing_template_details">
  <div class="<%=model.class%>_file_listing_scroll">
    <table class="<%=model.class%>_file_listing_tbl" cellspacing="0">
      <thead>
        <tr>
          <th align="left" width="30%" data-sort="filename" class="sortable">File Name</th>
          <th align="left" width="50%" data-sort="description" class="sortable">Description</th>
          <th align="right" width="70" data-sort="size" class="sortable">Size</th>
          <th align="center" width="70">Edit</th>
          <th align="center" width="70">Delete</th>
        </tr>
      </thead>
      <tbody>
        <# _.each(media_files, function(media_file){ #>
          <tr data-key="<#=media_file.media_key#>">
            <td align="left"><a href="<%=jsh._BASEURL%>_funcs/media/<#=media_file.media_key#>/file_tile" target="<%=jsh._instance%>_xfileproxy"><#=media_file.media_filename#></a></td>
            <td align="left"><#=media_file.media_desc#></td>
            <td align="right" style="white-space:nowrap;"><#=jsh.XFormat.bytes(media_file.media_size)#></td>
            <td align="center"><a href="#" class="<%=model.class%>_edit_media" data-media_key="<#=media_file.media_key#>"><img src="/images/icon_edit.png" class="icon" title="Edit"></a></td>
            <td align="center"><a href="#" class="<%=model.class%>_delete_media" data-media_key="<#=media_file.media_key#>"><img src="/images/icon_delete.png" class="icon" title="Delete"></a></td>
          </tr>
        <# }); #>
      </tbody>
    </table>
  </div>
  <div class="<%=model.class%>_drop_overlay"><div class="<%=model.class%>_drop_overlay_body">Drop files here</div></div>
</script>

