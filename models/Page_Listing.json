{
  "Page_Listing": {
    "layout":"grid",
    "table":"{schema}.v_my_page",
    "actions":"BIUD",
    "roles": {"AUTHOR": "BIUD","PUBLISHER": "BIUD","VIEWER":"B"},
    "caption":["Page","Pages"],
    "reselectafteredit": "row",
    "sort":["^page_path"],
    "menu":"jsHarmonyCMS/Page_Listing",
    "rowlimit":250,
    "breadcrumbs":{
      "title": "<div class='bcrumbs_branch_header'>Branch</div><div class='bcrumbs_branch_body'><#=bcrumbs.branch_desc#></div>",
      "sql": "select branch_desc from {schema}.v_my_branch_desc where branch_id={schema}.my_current_branch_id()"
    },
    "oninit": "xmodel.controller.grid.OnLoadError = function(err){ if(err && err.Number==-14){ XExt.Alert('Please checkout a branch', function(){ XExt.navTo(jsh._BASEURL+xmodel.module_namespace+'Branch_Active_Listing', { force: true }) }); return true; } }",
    "fields": [
      {"name":"page_key","key":true,"control":"hidden"},
      {"name":"page_title","caption":"Title","control":"textbox_L"},
      {"name":"page_path","caption":"URL","control":"textbox_M","controlstyle":"width:270px;"},
      {"name":"template_id","caption":"Template","control":"dropdown","lov":{ "values": "#CMS_TEMPLATES" },"validate":["Required"]},
      {"name":"page_author_name","caption":"Author","actions":"B","control":"label","sqlselect":"jsharmony.get_sys_user_name(page_author)","cellstyle":"white-space:nowrap;"},
      {"name":"page_mtstmp","caption":"Modified","control":"label","actions":"B","format":["date","MM/DD/YYYY h:mm a"],"cellstyle":"white-space:nowrap;"},
      {"caption":"Edit","link":"js:_this.openPageEditor(this)","control":"html","value":"<img data-rowid='<%=rowid%>' src='/images/icon_edit.png' height=12 class='xicon' />","cellstyle": "text-align:center;" }
    ]
  }
}