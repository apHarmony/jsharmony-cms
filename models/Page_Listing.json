{
  "Page_Listing": {
    "layout":"grid",
    "table":"{schema}.page",
    "caption":["Page","Pages"],
    "reselectafteredit": "row",
    "menu":"jsHarmonyCMS/Page_Listing",
    "fields": [
      {"name":"page_title","caption":"Title","control":"textbox_M"},
      {"name":"page_path","caption":"URL","control":"textbox_L"},
      {"name":"template_id","caption":"Template","control":"dropdown","lov":{ "values": "#CMS_TEMPLATES" }},
      {"name":"page_author_name","caption":"Author","actions":"B","control":"label","sqlselect":"jsharmony.get_sys_user_name(page_author)"},
      {"name":"page_mtstmp","caption":"Modified","control":"label","actions":"B","format":["date","MM/DD/YYYY h:mm a"]},
      {"caption":"Edit","link":"js:_this.openPageEditor(this)","control":"html","value":"<img data-rowid='<%=rowid%>' src='/images/icon_edit.png' height=12 class='xicon' />","cellstyle": "text-align:center;" }
    ]
  }
}